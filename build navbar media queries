App.js
import React from 'react';
import Navbar from './components/Navbar';

function App() {
  return (
    <div>
      <Navbar />
      <h1 style={{ padding: '20px', textAlign: 'center' }}>Welcome to MySite</h1>
    </div>
  );
}

export default App;

